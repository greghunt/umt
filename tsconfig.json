{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"umt-core": ["./packages/core/src"],
			"umt-core/*": ["./packages/core/src/*"],
			"umt-plugin-markdown": ["./packages/plugin-markdown/src"],
			"umt-plugin-markdown/*": ["./packages/plugin-markdown/src/*"],
			"umt-*": ["./packages/*/src"]
		}
	},
	"references": [
		{ "path": "./packages/core" },
		{ "path": "./packages/plugin-markdown" }
	]
}
